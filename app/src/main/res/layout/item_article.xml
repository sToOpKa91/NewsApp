<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="12dp"
    android:layout_marginHorizontal="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/ivArticleImage"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <LinearLayout
        android:id="@+id/lLArticleInfo"
        android:layout_width="185dp"
        android:layout_height="match_parent"
        android:layout_marginStart="18dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivArticleImage"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvArticleDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            tools:text="12 p m xz 4to-to" />

        <TextView
            android:id="@+id/tvArticleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:textStyle="bold"
            app:fontWeight="700"
            tools:text="wgowh;gobwojn wejfigjipwinjosnkl;iwepjfweigvkebwvilwbeibfiwfojeofw;jfwo" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iVIcShare"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lLArticleInfo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_share" />

    <ImageView
        android:id="@+id/iVHeart"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iVIcShare"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_heart" />
</androidx.constraintlayout.widget.ConstraintLayout>